<div class="container">
  <div class="row centered">
    <div>
        <img src="http://placehold.it/350x216" class="center-block img-responsive title-image">
    </div>
    <div>
      <h1>Kiroku</h1>

      <div id="home_navigation">
        <ul class="list-inline">
          <li><%= link_to 'RECENT', posts_url %></li>
          <li>LINK2</li>
          <li>LINK3</li>
          <li><%= link_to 'UPLOAD', new_post_url %></li>
          <% if user_signed_in? %>
            <li>
              Welcome, <%= current_user.email %><%= current_user.admin? ? '-sama' : '-chan' %>! 
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
            </li>
          <% else %>
            <li>
            <%= link_to('Login', new_user_session_path)  %>  
            </li>
          <% end %>
        </ul>
      </div>

      <form id="search-form" action="<%= search_url %>" method="get">
        <div class="autocomplete-search">
          <input name="term" id="autocomplete-field" class="form-control" tabindex="-1" placeholder="Search..."/>
        </div>
        <ul class="autocomplete-items" id="autocomplete-items" style="display: none;">
        </ul>
      </form>
    </div>
  </div>
</div>